---
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
---

<MainLayout>
  <HeroSectionAlt
    title="opencode-await"
    subTitle="Monitor long-running commands with polling, log capture, and AI summarization."
    url="/getting-started/installation/"
  />
  
  <section class="mx-auto max-w-3xl px-4 py-12 text-center">
    <h2 class="text-2xl font-bold mb-4 text-neutral-800 dark:text-neutral-200">Quick Install</h2>
    <div class="bg-neutral-900 text-neutral-100 p-6 rounded-xl text-left overflow-x-auto shadow-lg border border-neutral-800">
      <pre class="font-mono text-sm"><code>&#123;
  "plugin": ["opencode-await"]
&#125;</code></pre>
    </div>
    <p class="mt-6 text-neutral-600 dark:text-neutral-400">
      Add to your <code>opencode.json</code> and restart OpenCode.
    </p>
    <a href="/getting-started/installation/" class="mt-10 inline-block px-8 py-4 bg-neutral-800 text-white rounded-xl font-medium transition-all hover:bg-neutral-700 hover:scale-105 active:scale-95 shadow-md">
      Read the Docs â†’
    </a>
  </section>
</MainLayout>
